{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@nostr-git/core": ["packages/core/src"],
      "@nostr-git/ui": ["packages/ui/src/lib"],
      "@nostr-git/types": ["packages/shared-types"]
    }
  }
}
