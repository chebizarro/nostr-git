{
  "name": "@nostr-git/core",
  "version": "1.0.0-alpha.1",
  "packageManager": "pnpm@10.12.4",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json",
    "./events": "./dist/events/index.js",
    "./git": "./dist/git/index.js",
    "./types": "./dist/types/index.js",
    "./worker": "./dist/worker/index.js",
    "./worker/worker.js": "./dist/worker/worker.bundle.js",
    "./api": "./dist/api/index.js",
    "./blossom": "./dist/blossom/index.js",
    "./stack": "./dist/stack/index.js",
    "./utils": "./dist/utils/index.js",
    "./errors": "./dist/errors/index.js"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.base.json"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && tsc -p tsconfig.base.json && pnpm run bundle:worker",
    "bundle:worker": "node scripts/bundle-worker.mjs",
    "watch:tsc": "tsc -p tsconfig.base.json --watch --preserveWatchOutput",
    "watch:worker": "node scripts/bundle-worker.mjs --watch",
    "watch": "node scripts/dev.mjs",
    "dev": "pnpm run build && node scripts/dev.mjs",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "prepare": "pnpm build",
    "prepublishOnly": "pnpm run typecheck && pnpm run lint && pnpm run test",
    "publish:alpha": "npm publish --access public --tag alpha",
    "publish:latest": "npm publish --access public"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^4.6.2",
    "buffer": "^6.0.3",
    "comlink": "^4.4.2",
    "diff": "^8.0.2",
    "file-type": "^20.0.0",
    "isomorphic-git": "^1.30.1",
    "nostr-tools": "^2.10.0",
    "parse-diff": "^0.11.1",
    "parse-patch": "^0.1.4",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "esbuild": "^0.24.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.18.0",
    "fake-indexeddb": "^6.2.4",
    "rimraf": "^6.1.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^3.2.4"
  }
}
