{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ui/*": ["../ui/src/*"]
    },
    "types": ["vite/client", "@storybook/addon-links", "svelte"],
    "outDir": "dist",
    "declaration": false,
    "emitDeclarationOnly": false
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./.storybook/**/*",
    "./stories/**/*",
    "../ui/src/**/*.svelte"
  ],
  "exclude": ["dist", "build"]
}
