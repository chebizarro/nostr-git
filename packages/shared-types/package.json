{
  "name": "@nostr-git/shared-types",
  "version": "0.1.0",
  "description": "Shared TypeScript types for nostr-git, including NIP-34 event types.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --declaration --outDir dist",
    "typecheck": "tsc -p tsconfig.types.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "tsd": "npm run build && tsd",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "watch": "tsc --declaration --outDir dist --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chebizarro/nostr-git.git"
  },
  "author": "chebizarro",
  "license": "MIT",
  "keywords": [
    "nostr",
    "nip-34",
    "types",
    "typescript",
    "shared"
  ],
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "dependencies": {
    "nostr-tools": "^2.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "vitest": "^2.1.9",
    "tsd": "^0.31.1"
  },
  "tsd": {
    "directory": ".",
    "files": [
      "index.test-d.ts"
    ]
  }
}
