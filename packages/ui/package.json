{
  "name": "@nostr-git/ui",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./tailwind.preset.js": "./tailwind.preset.js",
    "./index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "tailwind.preset.js"
  ],
  "scripts": {
    "format": "prettier --write .",
    "build": "svelte-package && cp src/index.css dist/index.css",
    "prepare": "pnpm run build",
    "watch": "cp src/index.css dist/index.css && svelte-package --watch & pnpm run watch-css",
    "watch-css": "nodemon --watch src/index.css --exec 'cp src/index.css dist/index.css'"
  },
  "peerDependencies": {
    "svelte": "^5.28.2"
  },
  "devDependencies": {
    "@lucide/svelte": "^0.482.0",
    "@octokit/types": "^14.1.0",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "bits-ui": "^1.5.3",
    "clsx": "^2.1.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte-check": "^4.1.6",
    "svelte-routing": "^2.13.0",
    "tailwind-merge": "^3.2.0",
    "tailwind-variants": "^0.2.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.8",
    "vite": "^6.3.3"
  },
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-sql": "^6.9.0",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@nostr-git/core": "workspace:*",
    "@nostr-git/shared-types": "workspace:*",
    "@tiptap/core": "^2.11.7",
    "@tiptap/extension-code-block": "^2.11.7",
    "@tiptap/pm": "^2.11.7",
    "@tiptap/starter-kit": "^2.11.7",
    "buffer": "^6.0.3",
    "date-fns": "^4.1.0",
    "debug": "^4.3.7",
    "parse-diff": "^0.11.1",
    "parse-git-diff": "^0.0.19",
    "parse-patch": "^0.1.4",
    "svelte-codemirror-editor": "^1.4.1",
    "zod": "^3.25.50"
  }
}
