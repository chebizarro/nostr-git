{
  "compilerOptions": {
    "noEmit": true,
    "types": ["svelte", "vite/client"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules/**"]
}
