{
  "name": "nostr-github-extension",
  "version": "0.2.0",
  "description": "Adds a command to generate Nostr events from GitHub permalinks",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:firefox": "node esbuild.config.js --target=firefox",
    "build:chrome": "node esbuild.config.js --target=chrome",
    "build:firefox:prod": "node esbuild.config.js --target=firefox --prod",
    "build:chrome:prod": "node esbuild.config.js --target=chrome --prod",
    "build:watch": "node esbuild.config.js --watch",
    "zip": "node esbuild.config.js --target=chrome --zip",
    "zip:chrome": "node esbuild.config.js --target=chrome --zip",
    "zip:firefox": "node esbuild.config.js --target=firefox --zip",
    "release:zip": "pnpm build:chrome:prod && pnpm zip:chrome && pnpm build:firefox:prod && pnpm zip:firefox",
    "copy": "copyfiles -u 1 \"./src/icons/*\" \"./src/popup/*\" \"./src/manifest.firefox.json\" \"./dist/nostr-github-extension\"",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e:build": "pnpm build:chrome:prod",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:install": "npx playwright install chromium",
    "test": "pnpm test:unit && pnpm test:e2e:build && pnpm test:e2e"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.313",
    "@playwright/test": "^1.47.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.25.2",
    "http-server": "^14.1.1",
    "happy-dom": "^15.11.7",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@nostr-git/shared-types": "workspace:*",
    "lang-map": "^0.4.0",
    "nostr-tools": "^2.11.0",
    "zip-a-folder": "^3.1.9"
  }
}
