    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest run"
  },
  "dependencies": {
    "@nostr-git/shared-types": "workspace:*",
    "buffer": "^6.0.3",
    "isomorphic-git": "^1.27.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  }
}
