{
  "name": "@nostr-git/git-wrapper",
  "version": "0.1.0",
  "description": "Pluggable git implementation wrapper with nostr extensions.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "test": "vitest run",
    "example:push-normal": "node --loader ts-node/esm examples/push-normal.ts",
    "example:push-pr": "node --loader ts-node/esm examples/push-pr.ts",
    "example:clone-and-pr": "node --loader ts-node/esm examples/clone-and-pr.ts"
  },
  "dependencies": {
    "@nostr-git/shared-types": "workspace:*",
    "buffer": "^6.0.3",
    "isomorphic-git": "^1.27.0"
  },
  "devDependencies": {
    "@types/node": "^22.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  }
}
