{
  "name": "ngit-vscode",
  "displayName": "Nostr Git Integration",
  "description": "Interact with Nostr-backed Git repositories using ngit.",
  "repository": {
    "type": "git",
    "url": "https://github.com/budabit/nostr-git.git"
  },
  "publisher": "budabit",
  "version": "0.1.0",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ngit.listPRs",
        "title": "List Nostr PRs",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.initRepo",
        "title": "Initialize Nostr Repo",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.copyCloneUrl",
        "title": "Copy Clone URL",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.copyWebUrl",
        "title": "Copy Web URL",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.announceRepo",
        "title": "Generate Repo Announcement",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.parseRepoEvent",
        "title": "Parse Repo Announcement",
        "category": "Nostr Git"
      },
      {
        "command": "ngit.nip46Connect",
        "title": "Connect to NIP-46 Signer",
        "category": "Nostr Git"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nostr-git",
          "title": "Nostr Git",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "nostr-git": [
        {
          "id": "nostrRepos",
          "name": "Nostr Repositories",
          "icon": "media/icon.svg",
          "contextualTitle": "Nostr Repositories"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "nostrRepos",
        "contents": "No Nostr repositories found.\n[Parse Repo Event](command:ngit.parseRepoEvent)\n[Connect NIP-46 Signer](command:ngit.nip46Connect)\nTo learn more about Nostr Git integration, [read our docs](https://github.com/nostr-protocol/nips/blob/master/34.md).",
        "when": "!nostrRepos.hasRepos"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ngit.copyCloneUrl",
          "when": "view == nostrRepos && viewItem == nostrRepo",
          "group": "inline"
        },
        {
          "command": "ngit.copyWebUrl",
          "when": "view == nostrRepos && viewItem == nostrRepo",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "ngit.listPRs",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "ngit.initRepo",
          "when": "workspaceFolderCount > 0"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run bundle",
    "compile": "tsc -p ./",
    "bundle": "node build.js",
    "watch": "tsc -p ./ --watch",
    "package": "npx vsce package",
    "clean": "rm -rf out/"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "@types/vscode": "^1.88.0",
    "esbuild": "^0.25.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "nostr-tools": "^2.16.2"
  }
}
